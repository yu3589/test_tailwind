<div class="p-4 md:p-6">
  <div class="flex flex-col flex-grow items-center justify-center w-full">
    <div class="text-uho-dark_gray font-bold text-center pt-2 ipad:pt-10 2xl:pt-12">
      <div class="text-3xl md:text-4xl"><%= @category %>が欲しい</div>
    </div>
    <div class="text-uho-dark_gray font-bold text-center">
      <div class="text-4xl md:text-5xl">あなたへ送る</div>
      <div class="text-4xl md:text-5xl md:my-2"><%= t('uho_quotes.title') %></div>
    </div>

    <div class="flex justify-center">
      <%= image_tag 'gorilla_for_phone.svg', class: 'w-24 h-24 md:hover:animate-guragura transition-transform' %>
    </div>

    <div class="pt-5 md:pt-10 2xl:pt-14 opacity-100 md:opacity-0 md:animate-fade-in">
      <div class="ring-2 ring-black rounded-3xl bg-uho-white px-4 py-10 md:p-9 text-center text-2xl md:text-4xl max-w-4xl w-auto mx-auto">
        <%= @selected_uho_quote %>
      </div>
    </div>

    <div class="p-4">
      <div class="flex justify-center items-center pt-5 md:pt-10 2xl:pt-14">
        <%= link_to "https://twitter.com/intent/tweet?url=#{root_url}&text=#{CGI.escape("ウホ名言で「#{@category}」をもらったよ！\n【#{@selected_uho_quote}】")}\n&hashtags=#{CGI.escape("ウホ名言")}", target: "_blank", class: "ring-2 ring-black
            rounded-md bg-uho-dark_yellow px-3 py-3 md:px-5 md:py-5 text-black hover-button" do %>
          <%= image_tag 'x.svg', class: 'mx-auto' %>
            でシェア
          <% end %>
        </div>
        <div class="flex justify-center items-center pt-10">
          <%= link_to "ホームに戻る", root_path, class: "ring-2 ring-black
              rounded-md bg-uho-green px-3 py-3 md:px-5 md:py-5 text-black hover-button"%>
        </div>
     </div>
  </div>
</div>
